{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "reload-on-save",
            "type": "shell",
            "command": "make",
            "args": [
                "TESTBENCH=${fileBasenameNoExtension}",
                "reload"
            ],
            "problemMatcher": {
                "owner": "vhdl",
                "fileLocation": [
                    "relative",
                    "${workspaceFolder}"
                ],
                "pattern": {
                    "regexp": "^(.*\\.vhd):(\\d+):(\\d+):([A-Za-z]+):(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            }
        }
    ]
}